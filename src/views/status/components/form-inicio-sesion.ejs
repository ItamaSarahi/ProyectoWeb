<form id="formStatus" action="/iniciosesion/registro" method="post">

    <body class="cyan darken-1">
        <br>

        <div class="container grey lighten-2" style="width: 650px; height:550px; padding: 18px">

            <h3 style="text-align: center; font-family: 'Franklin Gothic Medium'">CREATIVE IDEAS </h3>
            <img class="responsive-img" src="/assets/img/user-login.png" style="margin-left: 270px;">


            <!--División de materialize tipo input field-->
            <div class="input-field">
                <!--Icóno-->
                <i class="material-icons prefix">account_box</i>
                <!--Input de tipo texto-->
                <input type="text" name="usuario" id="usuario">
                <label for="usuario">Usuario</label>
            </div>

            <!--División de materialize tipo input field-->
            <div class="input-field" style="margin-top: 40px">
                <!--Icóno (password)-->
                <i class="material-icons prefix">lock</i>
                <!--Input de tipo contraseña-->
                <input type="password" name="password" id="password">
                <label for="password">Contraseña</label>
            </div>

            <!--Este es el botón-->
            <button type="submit" class="btn waves-effect cyan darken-1" style="margin-left: 218px; margin-top: 50px">
                <!--Este es el icono del boton (o sea, la flechita)-->
                <i class="material-icons right">check</i> Iniciar sesión

            </button>


            <!--Esto solo es una etiqueta de texto h6-->
            <h6 style="margin-left: 170px; font-style:oblique; margin-top: 30px;">¿No tienes una cuenta? <A
                    href="/registro"> Registrarte</A></h6>


        </div> <!-- CONTAINER -->
        <br>
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        
        <% if(typeof alert!="undefined" ){%>
            <script>
                Swal.fire({
                    title: '<%= alertTitle %>',
                    text: '<%= alertMessage %>',
                    icon: '<%= alertIcon%>',
                }).then((result) => {
                    window.location='/ <%= ruta%>';
                })
            </script>
            <%}%>

    </body>
</form>

</html>